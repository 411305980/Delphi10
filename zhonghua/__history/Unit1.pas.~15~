  System.Variants, System.Classes, Vcl.Graphics, Vcl.Controls, Vcl.Forms,
  Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

Type
  TForm1 = Class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    edtname: TEdit;
    edtAge: TEdit;
    Label3: TLabel;
    rgsex: TRadioGroup;
    rbMan: TRadioButton;
    rbwoman: TRadioButton;
    grp1: TGroupBox;
    Label4: TLabel;
    CheckBox1: TCheckBox;
    CheckBox2: TCheckBox;
    CheckBox3: TCheckBox;
    CheckBox4: TCheckBox;
    CheckBox5: TCheckBox;
    CheckBox6: TCheckBox;
    Label5: TLabel;
