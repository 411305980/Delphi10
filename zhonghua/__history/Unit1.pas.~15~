    Procedure Button1Click(Sender: TObject);
  Private
    { Private declarations }
  Public
    { Public declarations }
  End;

Var
  Form1: TForm1;

Implementation

{$R *.dfm}

Procedure TForm1.Button1Click(Sender: TObject);
Var
  Inifile: TIniFile;
  Section: String;
Begin
  Inifile := TIniFile.Create('D:\delphi-demo\delphi1\22-10-20INI文件操作\zhonghua\Win32\Debug\Userconfig.ini');
  Section := '饶中华';
  Inifile.WriteString(Section, 'editname', edtname.Text);
  Inifile.WriteString(Section, 'editage', edtAge.Text);
  Inifile.Writebool(Section, 'man/woman', rbMan.Checked);
  Inifile.Writebool(Section, '爱好选择', CheckBox1.Checked);
  Inifile.Writebool(Section, '爱好选择', CheckBox2.Checked);
  Inifile.Writebool(Section, '爱好选择', CheckBox3.Checked);
  Inifile.Writebool(Section, '爱好选择', CheckBox4.Checked);
  Inifile.Writebool(Section, '爱好选择', CheckBox5.Checked);
  Inifile.Writebool(Section, '爱好选择', CheckBox6.Checked);
  Inifile.WriteInteger(Section, 'Address', cbbAddress.ItemIndex);

End;

End.

